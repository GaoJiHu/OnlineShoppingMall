package com.whalesj.fastdfs;

import org.csource.fastdfs.ClientGlobal;
import org.csource.fastdfs.StorageClient;
import org.csource.fastdfs.StorageServer;
import org.csource.fastdfs.TrackerClient;
import org.csource.fastdfs.TrackerServer;

public class TestFastDfs {
	public void uploadtest() throws Exception{
		//1、初始化全局配置
		ClientGlobal.init("G:\\OnlineShoppingMall\\online-shoppingmall-manager\\online-shoppingmall-manager-web\\src\\main\\resources\\properties\\client.conf");
		//2、创建一个TrakcerClient对象
		TrackerClient trackerClient = new TrackerClient();
		//3、得到TrackerServer对象
		TrackerServer trackerServer = trackerClient.getConnection();
		//4、声明一个StorageServer对象
		StorageServer storageServer = null;
		//5、创建StorageClient对象
		StorageClient storageClient = new StorageClient(trackerServer, storageServer);
		//上传
		String[] strings = storageClient.upload_file("G:\\cat.png", "png", null);//参数分别为文件路径，文件扩展名，及文件的可控属性

	}
}
